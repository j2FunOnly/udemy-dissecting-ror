<%= form_for(portfolio) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label class="btn btn-sm btn-outline-dark">
          Upload thumb image
          <%= f.file_field :thumb_image, style: 'display: none;' %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-sm btn-outline-dark">
          Upload main image
          <%= f.file_field :main_image, style: 'display: none;' %>
        </label>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: 10 %>
      </div>
    </div>

    <div class="col-md-6">
      <hr>
      <h2>
        Techologies used
      </h2>
      <div id="technologies">
        <%= f.fields_for :technologies do |tech| %>
          <%= render 'technology_fields', f: tech %>
        <% end %>
        <div class="form-group">
          <%= link_to_add_association 'Add techonolgy', f, :technologies, class: 'btn btn-sm btn-outline-secondary' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
