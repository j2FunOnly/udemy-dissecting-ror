<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |msg| %>
      <%= js add_gritter(msg, title: 'j2FunOnly Portfolio Site', sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 15 %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save Blog', class: 'btn btn-primary' %>
  </div>
<% end %>
