<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |msg| %>
      <%= alert_generator msg %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :topic %>
    <%= f.collection_select :topic_id, Topic.all, :id, :title, {}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <div class="form-check form-check-inline">
      <%= f.radio_button :status, 'draft', class: 'form-check-input' %>
      <%= f.label :status, 'Draft', for: 'blog_status_draft', class: 'form-check-label' %>
    </div>

    <div class="form-check form-check-inline">
      <%= f.radio_button :status, 'published', class: 'form-check-input' %>
      <%= f.label :status, 'Published', for: 'blog_status_published', class: 'form-check-label' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 15 %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save Blog', class: 'btn btn-primary' %>
  </div>
<% end %>
