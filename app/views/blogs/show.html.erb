<div class="col-md-8 blog-main">
  <div class="blog-post">
    <h2 class="blog-post-title"><%= link_to @blog.title, @blog %></h2>
    <p class="blog-post-meta">Published <%= distance_of_time_in_words(@blog.created_at, Time.zone.now) %> ago</p>

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to 'Home', root_path %></li>
        <li class="breadcrumb-item"><%= link_to 'Blog', blogs_path %></li>
        <li class="breadcrumb-item"><%= link_to 'Topics', topics_path %></li>
        <li class="breadcrumb-item"><%= link_to @blog.topic.title, @blog.topic %></li>
      </ol>
    </nav>

    <% if logged_in?(:site_admin) %>
      <p class="blog-post-meta">
        <%= link_to @blog.status.capitalize, toggle_status_blog_path(@blog), method: :post, class: 'btn btn-sm btn-light' %>
        <%= link_to 'Edit', edit_blog_path(@blog), class: 'btn btn-sm btn-light' %>
        <%= link_to 'Destroy', @blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      </p>
    <% end %>

    <p><%= markdown @blog.body %></p>

  </div><!-- /.blog-post -->

  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>

  <%= render 'comment_form', comment: @comment unless current_user.is_a? GuestUser %>
</div>
