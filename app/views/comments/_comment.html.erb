<div class="comment-card">
  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-md-1">
          <%= gravatar_helper comment.user %>
        </div>
        <div class="col-md-11">
          <%= comment.user.name %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= comment.content %></p>
        <footer class="blockquote-footer">
          <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
        </footer>
      </blockquote>
    </div>
  </div>
</div>
